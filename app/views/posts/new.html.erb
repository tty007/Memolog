<%= form_for @post do |f| %>
  <div class="form-group center">
    <%= f.text_field :title, class: "form-control title-form", placeholder: 'ブログタイトル' %>
  </div>
  <div class="form-group">
      <%= f.text_area :content, size: "60x12", class: 'floara-editor', id: 'froala' %>
  </div>
  <div class="center">
    <%= f.submit "投稿する", class: "btn btn-success" %>
  </div>
<% end %>