<div class="center">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h4>ログイン</h4>

    <div class="form-icons">
      <div class="field">
        <div class="input-group">
          <span class="input-group-label">
            <i class="fa fa-envelope"></i>
          </span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "input-group-field" %>
        </div>
      </div>
    </div>

    <div class="form-icons">
      <div class="field">
        <div class="input-group">
          <span class="input-group-label">
            <i class="fa fa-key"></i>
          </span>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "input-group-field" %>
        </div>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "ログインする", class: "button expanded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
