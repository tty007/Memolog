<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">

<form>
  <div class="center">
  <div class="form-icons">
    <h4>新規登録</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%# #nameは未実装 %>
    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-user"></i>
      </span>
      <input class="input-group-field" type="text" placeholder="Full name">
    </div>

    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-envelope"></i>
      </span>
      <%= f.email_field :email, autofocus: true, placeholder: "email", class: "input-group-field" %>
    </div>

    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "input-group-field" %>
    </div>
    <% if @minimum_password_length %>
      ※パスワードは<%= @minimum_password_length %>文字以上でお願いします
    <% end %>
  </div>

  <button class="button expanded">会員になる</button>

  <% end %>
  </div>
</form>
